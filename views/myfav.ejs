<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

<script src="https://kit.fontawesome.com/3511d63699.js" crossorigin="anonymous"></script>
  
  <style>
    *{
      margin: 0px;
      padding: 0px;
      box-sizing: border-box;
     
    }
    body{
      background-color: grey;
    }
    .container{
      
      
      width: 100vw;
      text-align: center;
      
    }
    .tocenter{
      /* border: 2px solid red; */
      margin: auto;
     
    }
    .navbar{
      margin-bottom: 1rem;
    }
    .nav-item{
      margin: 0rem 1rem;
    }
    /* .note-container{
      display: flex;
      flex-direction: row;
    } */
    
  </style>
</head>
<body>

  

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
      <a class="navbar-brand" href="#"><i class="bi bi-journal-text nav-item"></i></a>
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <li class="nav-item active">
          <a class="nav-link" href="/note">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/note/myfav">My fav</a>
        </li>
        
      </ul>
      
    </div>
  </nav>

  <div class="note-container">
  <% var i = 1%>
  <% data.forEach((item)=>{ %>
  <div class="card w-75 text-white bg-dark mt-5 mb-3 tocenter" style="max-width: 28rem;">
    <h5 class="card-header bg-secondary "> <%= i++ %> .Note</h5>
    <div class="card-body">
      <h5 class="card-title"><%= item.tittle%></h5>
      <p class="card-text"><%= item.notes%></p>

      <!-- <form action="/note/edit/<%= item._id%>" method="get" class="d-inline">
        <button type="submit" class="btn"><i class="fas fa-pen-square text-info" ></i></button>
      </form> -->
      <a href="/note/edit/<%= item._id%>" method="get" class="btn btn-primary"><i class="bi bi-vector-pen"></i></a>
      
      <form action="/note/delete/<%= item._id%>" method="post" class="d-inline">
        <button class="btn btn-primary" ><i class="bi bi-trash-fill"></i></button>
      </form>
      <form action="/note/isfav/<%= item._id%>" method="post" class="d-inline">
        <button class="btn btn-primary" > 
          <% if(item.isfav=="yes"){%> <i class="bi bi-star-fill"></i> <%}%>
          <% if(item.isfav=="no"){%> <i class="bi bi-star"></i><%}%> 
        
        </button>
      </form>
      
    </div>
  </div>
  <%})%>
</div>


</body>

</html>