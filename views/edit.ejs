  <div class="container">
      
    <div class="col-sm-6 card bg-light tocenter">
      <h2 class="alert alert-success text-center">Update Your Note ..<i class="bi bi-journal-plus"></i></h2>

      <form method="post" action="/note/update/<%=data._id%>">
        <div class="mb-3">
          <label for="name" class="form-label">Tittle</label>
          <input type="text" name="tittle" id="name" class="form-control" value="<%=data.tittle%>">
        </div>

        <div class="mb-3">
          <label for="exampleFormControlTextarea1">Description</label>
          <textarea class="form-control" name="notes" id="exampleFormControlTextarea1" rows="3" value=""><%= data.notes%></textarea>
          
         
        </div>
        
        
        <button type="submit" class="btn btn-primary">update<i class="bi bi-plus"></i></button>
        <button type="submit" class="btn btn-primary">back to home<i class="bi bi-plus"></i></button>
      </form>
    </div>
    
  </div>
  
 
